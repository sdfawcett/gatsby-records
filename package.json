{
  "name": "gatsby-records",
  "description": "ecommerce store built on gatsby with shopify support",
  "version": "1.0",
  "private": true,
  "author": "Shayne Fawcett",
  "devDependencies": {
    "cross-env": "^7.0.2",
    "husky": "^7.0.2",
    "lint-staged": "^11.1.2",
    "prettier": "^2.1.2",
    "rimraf": "^3.0.2"
  },
  "workspaces": [
    "packages/landing",
    "packages/landing-gatsby"
  ],
  "scripts": {
    "clean": "yarn workspaces run rimraf \"{.next,node_modules,.cache,out,dist}\" && rimraf node_modules",
    "gatsby-dev": "yarn workspace @sdfawcett/gatsby-records run dev",
    "gatsby-build": "yarn workspace @sdfawcett/gatsby-records run build",
    "gatsby-serve": "yarn workspace @sdfawcett/gatsby-records run start"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,md,css}": [
      "prettier --trailing-comma es5 --single-quote --write"
    ]
  },
  "dependencies": {}
}
